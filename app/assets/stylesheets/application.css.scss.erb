/*
 * This is a manifest file that'll automatically include all the stylesheets available in this directory
 * and any sub-directories. You're free to add application-wide styles to this file and they'll appear at
 * the top of the compiled file, but it's generally better to create a new file per style scope.
 *= require_self
*/

$tab-highlight: #97A2DE;
$header-color: #EEEEEC;
$header-background: darken($tab-highlight, 30%);
$splash-color: #a40000;
$content-color: #333333;
$background-color: #090233;
$rollable-button: #6782DE;
$rollable-font: #ccc;

@font-face {
	font-family: optimus;
	src: url(<%= asset_path('OptimusPrinceps.ttf') %>);
}

body {
	margin: 0px;
	background: $header-color;
	text-align: center;
	font-family: verdana, arial, helvetica, sans-serif;
	font-size:   14px;
	line-height: 18px;
}

select, textarea, input[type="text"], input[type="password"], input[type="email"] {
	line-height: 14px;
	padding: 0px;
	margin: 0px;
	height: 22px;
}

label {
  margin: 0px;
  text-transform: capitalize;
}

/* notice messages */
#notice {
	text-align: center;
	color: $splash-color;
}

/* navbar */
#navbar {
	background-color: #1b1b1b;
	margin-bottom: 0px;

	.brand {
		font-family: optimus;
		color: $tab-highlight;
	}

	select { margin: 8px 6px 0px 6px; }
}

.navbar-inverse .nav {
  color: $splash-color;
}

.navbar-inverse .nav .active > a,
.navbar-inverse .nav .active > a:hover,
.navbar-inverse .nav .active > a:focus {
  color: $splash-color;
}

/* dice rolling */
#dice_roller {
	position: fixed;
	margin-top: 2em;

	input[type="text"] {width: 5em;}
}

#results {
	background: $header-color;
}

.counting {
	background: lighten($header-color, 30%);
}

.rollable {
  background: $rollable-button;
  border: 2px solid $rollable-font;
  border: {
    radius: 3px;
  }
  padding: 0px 2px;
  color: $rollable-font;
  display: inline-block;
  span.rollable {
    border: none;
  }

}

ul.roll_stats {
  display:none;
}

/* page content */
#content {
	color: $content-color;
	background: $header-color;
	border-top: none;
	padding: 1em 4em;
	text-align: justify;

	a {
		text-decoration: none;
		border-style: none;
		color: $header-background;

		&:hover {
			color: $splash-color;
			text-decoration: underline;
		}
	}

	a.selected {
		color: $splash-color;
		text-decoration: none;

		&:hover { background: $header-color; }
	}

	h5 {
		color: $header-color;
		background: url(<%= asset_path("mortal-smudge.png") %>) no-repeat -10px -6px;
		overflow: visible;
		padding: 0.2em 1.5em;
		font-family: optimus;
		position: relative;
		left: -4em;

		&.mage { background: url(<%= asset_path("mage-smudge.png") %>) no-repeat -10px -6px; }
		&.vampire { background: url(<%= asset_path("vampire-smudge.png") %>) no-repeat -10px -6px; }
		&.werewolf { background: url(<%= asset_path("werewolf-smudge.png") %>) no-repeat -10px -6px; }
		&.promethean { background: url(<%= asset_path("promethean-smudge.png") %>) no-repeat -10px -6px; }
		&.changeling { background: url(<%= asset_path("changeling-smudge.png") %>) no-repeat -10px -6px; }
		&.hunter { background: url(<%= asset_path("hunter-smudge.png") %>) no-repeat -10px -6px; }
		&.geist { background: url(<%= asset_path("geist-smudge.png") %>) no-repeat -10px -6px; }
		&.spirit { background: url(<%= asset_path("spirit-smudge.png") %>) no-repeat -10px -6px; }
		&.mummy { background: url(<%= asset_path("mummy-smudge.png") %>) no-repeat -10px -6px; }
	}

	label.sized {
		width: 7em;
		text-align: right;
		margin-right: .5em;
		float: left;
	}

	table {
	    width: 100%;
	    text-align: left;
		td.growdown { vertical-align: top; }
	}

	table.three_cells {
		td { width: 9em; }
		td:nth-child(3) { width: 36em;}
	}

	table.four_cells {
		th, td { width: 14em; }
	}

	table.five_cells {
		th, td { width: 12em; }
	}

	table.six_cells td { width: 9em; }

	table.list {
		th {
			text-align: center;
			padding: 0px 4px;
		}

		td {
			padding: 0px 4px;
			text-align: center;
		}
	}

	input[type="text"], input[type="password"] { width: 9em; }

	input.number { width: 2em; }
	input.parent_number { width: 2em; }
	input.spirit_number { width: 2em; }
	input.long { width: 36em; }

	textarea 	{
		width: 100%;
		height: 5em;
	}

  .pagination {
    text-align: center;
  }
}

.field_with_errors {
  padding: 2px;
  background-color: $splash-color;
  color: $header-color;
}

#error_explanation {
  width: 400px;
  border: 2px solid $splash-color;
  padding: 7px;
  padding-bottom: 12px;
  margin-bottom: 20px;
  background-color: #f0f0f0;
}

#error_explanation h2 {
  text-align: left;
  font-weight: bold;
  padding: 5px 5px 5px 15px;
  font-size: 12px;
  margin: -7px;
  background-color: $splash-color;
  color: $header-color;
}

#error_explanation p {
  color: $content-color;
  margin-bottom: 0;
  padding: 5px;
}

#error_explanation ul li {
  font-size: 12px;
  list-style: square;
}
