<% if member.show_name_to_user?(current_user) and member.show_clique_to_user?(current_user) %>
  <tr>
    <td><%= link_to image_tag("edit.png"), edit_character_path(member) if can? :edit, member %></td>
    <td><%= link_to member.name, member %></td>
    <td><%= member.concept %></td>
    <td><%= link_to member.ideology.name, member.ideology if member.show_ideology_to_user?(current_user) %></td>
    <td><%= link_to image_tag("delete.png"), member, :confirm => 'Are you sure you want to delete this character?', :method => :delete if can? :destroy, member %></td>
  </tr>
<% end %>
