<p>
  <h3>Name</h3>
  <p><%= @clique.name %></p>
</p>

<p>
  <h3>Territory</h3>
  <p><%= @clique.territory %></p>
</p>

<p>
  <h3>Description</h3>
  <p><%= simple_format @clique.description %></p>
</p>

<p>
<table class='list'>
  <tr>
    <th></th>
    <th>Member</th>
    <th>Concept</th>
    <th>Ideology</th>
    <th></th>
  </tr>
  <%= render(:partial => "member", :collection => @clique.characters) %>
</table>
</p>

<% if @clique.has_totem? %>
  <p>
    <h3>Totem</h3>
    <p><%= simple_format(@clique.totem) %></p>
  </p>
<% end %>



<%= link_to('New member', new_character_path(:clique_id => @clique.id, :chronicle_id => @clique.chronicle_id)) %>
<% if can? :edit, @clique %>
  | <%= link_to('Edit', edit_clique_path(@clique)) %>
<% end %>
<% if can? :destroy, @clique %>
  | <%= link_to('Destroy', @clique, :confirm => 'Are you sure you want to delete this clique?', :method => :delete) %>
<% end %>
